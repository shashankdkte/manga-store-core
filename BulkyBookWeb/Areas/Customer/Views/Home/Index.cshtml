@model IEnumerable<BulkyBook.Models.Product>

@{
	Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<section class="new-released">
    <h2 class="subheadings">NEW RELEASED COMIC</h2>
</section>
<div class="row pb-3">
	@foreach(var product in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        @*<img src="https://th.bing.com/th/id/OIP.KXaBEnx2fZP5zZJUnD6cSgHaKe?pid=ImgDet&w=827&h=1169&rs=1" class="card-img-top rounded" />*@

						<div class="card-body">
						<div class="pl-1">
							<p class="card-title h5 text-primary">@product.Title</p>
							<p class="card-title text-info">by <b>@product.Author</b></p>
                                <p>@product.Chapter</p>
						</div>
						<div class="pl-1">
							<p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
						</div>
						<div class="pl-1">
							<p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
						</div>
                            <div class="rating-section">
                                <div class="star">⭐</div>
                                <h5> @product.Rating/5.0</h5>
                            </div>
						</div>
					</div>
					<div>
						<a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
							Details
						</a>
					</div>
				</div> 
			</div>
		</div>
	}
</div>